[Unit]
Description=MTConnect Agent
After=network.target multi-user.target

[Service]
Type=simple
WorkingDirectory=/etc/mtconnect/agent
ExecStart=/usr/bin/agent run agent.cfg
User=mtconnect
Group=mtconnect
RuntimeMaxSec=86400s
Restart=always
RestartSec=2
StartLimitInterval=90s
StartLimitBurst=3
StandardOutput=journal
LimitCORE=10

[Install]
WantedBy=multi-user.target